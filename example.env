# Example .env for pendelplaner
# Copy this file to .env and fill in your values.

# Required
GOOGLE_MAPS_API_KEY=
ORIGIN_ADDRESS=<HOME_ADDRESS>
DESTINATION_ADDRESS=<OFFICE_ADDRESS>
LATEST_ARRIVAL_LOCAL=09:00
MORNING_WINDOW_START_LOCAL=05:00
WORK_HOURS=8
LUNCH_MIN_MINUTES=30
LUNCH_MAX_MINUTES=60
LUNCH_STEP_MINUTES=5
STEP_MINUTES=5
DAY_OFFSET=0
TZ=Europe/Zurich

# Output formatting
COLOR_OUTPUT=auto
ASCII_OUTPUT=0
COMPACT_WEEKLY=0

# Personal breaks (off-login)
PERSONAL_BREAKS_MIN=60

# Weekly planning
WEEKLY_BLOCKS=OPEN,OPEN,OPEN,OPEN,OPEN
WEEKLY_START_DATE=
WEEKLY_HO_PERCENT=0

# Alternative half-day slots
AFTERNOON_ARRIVAL_LOCAL=13:30
AFTERNOON_WINDOW_START_LOCAL=11:00

# Evening extension (stay longer at office)
EXTEND_STEP_MINUTES=30
EXTEND_WORSE_STEPS=6
EXTEND_LATEST_LOCAL=22:00
EXTEND_TARGET_SAVE_MIN=10
AVOID_THRESHOLD_MIN=8
AVOID_STEP_MINUTES=15

# Human-centric constraints
MAX_LEAVE_TIME_LOCAL=19:30
FRIDAY_EARLY_CUTOFF_LOCAL=17:30
LATE_PENALTY_START_LOCAL=18:00
LATE_PENALTY_PER_15_MIN=2

# Timebank (compensation)
# Current positive balance in minutes, e.g., 120 for +2h
TIMEBANK_CURRENT_MIN=0
# Cap in minutes (default 3000 = 50h)
TIMEBANK_CAP_MIN=3000
# Max spend from timebank per day (minutes), 0 = no daily limit
TIMEBANK_MAX_SPEND_PER_DAY_MIN=0
# What you do when leaving early / waiting (gym|work)
EXTENSION_ACTIVITY=gym

# Gym options
GYM_ENABLED=1
GYM_ADDRESS_1=<GYM_ADDRESS_1>
GYM_ADDRESS_2=<GYM_ADDRESS_2>
GYM_TRAIN_MIN_MINUTES=90
GYM_TRAIN_MAX_MINUTES=120
GYM_TRAIN_STEP_MINUTES=15
GYM_MAX_DAYS_PER_WEEK=3
GYM_PREFERRED_DAYS=MO,WE,FR
GYM_LEAVE_MODE=earliest
GYM_COMBO_MAX=60
 
# API budget & Caching
MAX_API_CALLS_PER_RUN=1000
ROUTE_CACHE_GRANULARITY_MIN=5..15
